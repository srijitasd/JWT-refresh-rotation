{{> header}}
<div class="container">
    <div class="row">
        <div class="col-4 mx-auto p-4 form_container">
            <h2 class="mb-3">Login</h2>
            <form action="/login" method="POST">
                <div class="mb-3">
                    <label for="usr_email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="usr_email" name="usr_email">
                </div>
                <div class="mb-3">
                    <label for="usr_pwd" class="form-label">Password</label>
                    <input type="password" class="form-control" id="usr_pwd" name="usr_pwd">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
{{> footer}}
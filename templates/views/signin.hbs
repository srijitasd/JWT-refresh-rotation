{{> header}}
<div class="container mt-5">
    <div class="row">
        <div class="col-5 mx-auto p-4 form_container" style="height: 22rem;">
            <h2 class="mb-3">Signin</h2>
            <form action="/signin" method="POST">
                <div class="mb-3">
                    <label for="usr_email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="usr_email" name="usr_email">
                </div>
                <div class="mb-3">
                    <label for="usr_pwd" class="form-label">Password</label>
                    <input type="password" class="form-control" id="usr_pwd" name="usr_pwd">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <p class="mt-3">New here ? <a href="./signup">Signup</a></p>
        </div>
    </div>
</div>
{{> footer}}
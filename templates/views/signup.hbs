{{> header}}
<div class="container">
    <div class="row">
        <div class="col-5 mx-auto p-4 form_container" style="height: 27rem;">
            <h2 class="mb-3">Signup</h2>
            <form action="/signup" method="POST">
            <div class="mb-3">
                    <label for="usr_name" class="form-label">Full name</label>
                    <input type="text" class="form-control" id="usr_name" name="name">
                </div>
                <div class="mb-3">
                    <label for="usr_email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="usr_email" name="email">
                </div>
                <div class="mb-3">
                    <label for="usr_pwd" class="form-label">Password</label>
                    <input type="password" class="form-control" id="usr_pwd" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
             <p class="mt-3">Already an user ? <a href="./signin">Signin</a></p>
        </div>
    </div>
</div>
{{> footer}}